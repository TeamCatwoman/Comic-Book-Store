<div id='mini-book-main'>
    {{#result}}
     <div class="col-md-4 col-sm-4 col-xs-6 item center-block">
        <div class="comic-info">
            <div class="featurette-heading fixed-title">{{Result.Title}}</div>
            <h6>Author: {{Result.Author}}</h6>
            <img src="{{Result.ImageSrc}}" class="comic-img" alt="{{Result.Title}}">
            <p><a class="btn btn-success" href="#details/{{Result.Id}}" role="button">View details &raquo;</a></p>
        </div>
    </div>  
    {{/result}}
</div>